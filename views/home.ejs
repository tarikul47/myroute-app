<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Hello, world!</title>
</head>

<body>
    <div class="container">

        <!-- Task Area -->
        <div class="sider">
            <div class="dots">
                <div class="dot1"></div>
                <div class="dot2"></div>
                <div class="dot3"></div>
            </div>

            <div class="my-name">
                <h2>Hello, Appy</h2>
            </div>

            <div class="incomplete-task-up">
                <div class="incomplete-task">

                    <p>You have 2 <span style="color: #FFBD44;">Incompleted</span> Tasks :(</p>

                </div>
            </div>

            <div class="uppertaskarea">
                <div class="taskarea">

                    <% for(task of tasks){ %>
                        <div class="tasks">
                            <p>
                                <%- task.title %>
                            </p>
                            <div class="task-update-delete">

                                <div class="update" data-bs-toggle="modal" data-bs-target="#updateTaskModal">
                                    <a href="#">
                                        <i class="fas fa-pen-square"></i>
                                    </a>
                                </div>
                                <div class="delete">
                                    <a href="#">
                                        <i class="fas fa-times-circle"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <div class="tasks completed">
                                <p>Fix the bookshelf</p>
                                <div class="task-update-delete">
                                    <div class="update">
                                        <a href="#">
                                            <i class="fas fa-pen-square"></i>
                                        </a>
                                    </div>
                                    <div class="delete">
                                        <a href="#">
                                            <i class="fas fa-times-circle"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="tasks completed">
                                <p>Buy some apples</p>
                                <div class="task-update-delete">
                                    <div class="update">
                                        <a href="#">
                                            <i class="fas fa-pen-square"></i>
                                        </a>
                                    </div>
                                    <div class="delete">
                                        <a href="#">
                                            <i class="fas fa-times-circle"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>

            <div type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap"
                class="new-task-button">
                <span>Add Task</span>
            </div>
        </div>
    </div>

    <!-- Task added  -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content box-model">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form id="addTaskForm">
                        <div class="mb-3">
                            <label for="task-name" class="col-form-label">Task:</label>
                            <input id="name" type="text" name="name" class="form-control tasks">
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Description:</label>
                            <textarea id="description" name="description" class="form-control tasks"
                                id="message-text"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="message-text" class="col-form-label">Task Type:</label>
                            <div class="form-check form-check-inline">
                                <input id="option" class="form-check-input" name="option[]" value="normal" type="radio"
                                    name="inlineRadioOptions" id="inlineRadio1">
                                <label class="form-check-label" for="inlineRadio1">Normal</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input id="option" class="form-check-input" name="option[]" value="medium" type="radio"
                                    name="inlineRadioOptions" id="inlineRadio2">
                                <label class="form-check-label" for="inlineRadio2">Medium</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input id="option" class="form-check-input" name="option[]" value="urgent" type="radio"
                                    name="inlineRadioOptions" id="inlineRadio3">
                                <label class="form-check-label" id="inlineRadio3" for="inlineRadio2">Urgent</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Send message</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/main.js"></script>

